<Window x:Class="hw_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Content="Товар" Click="ShowProduct_Click" Margin="5"/>
            <Button Content="Корзина" Click="ShowCart_Click" Margin="5"/>
            <Button Content="Оформити заказ" Click="ShowPurchaseWindow_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
