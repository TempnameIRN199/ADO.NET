<Window x:Class="Exam.AddWindow.WindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="WindowAdd" Height="400" Width="400">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Button Content="Save" Name="btnSave" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5"
            Margin="0,10,0,10" Click="btnSave_Click"/>

    </Grid>
</Window>
