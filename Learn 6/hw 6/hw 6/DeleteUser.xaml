<Window x:Class="hw_6.DeleteUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw_6"
        mc:Ignorable="d"
        Title="DeleteUser" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="listBoxUsers" Grid.Row="1" Margin="5" 
         DisplayMemberPath="Login" SelectionMode="Single" 
         MouseDoubleClick="ListBoxUsers_MouseDoubleClick">
        </ListBox>

        <Label Content="Удаление происходит после двойного нажатия на юзера" Margin="5" Grid.Row="0"/>

    </Grid>
</Window>
